<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.garapon.tv"
       name="Garapon TV Client"
       version="2.0"
       provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.pil" version="1.1.7"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Garapon TV Client</summary>
    <summary lang="ja">ガラポンTVクライアント</summary>
    <description lang="en">Search &amp; Watch Contents of Garapon TV</description>
    <description lang="ja">ガラポンTVに蓄積されたコンテンツを検索・視聴します</description>
    <disclaimer lang="en">Tested on macOS</disclaimer>
    <disclaimer lang="ja">WindowsとMacOSXで動作</disclaimer>
    <website>http://kodiful.com/</website>
  </extension>
</addon>
